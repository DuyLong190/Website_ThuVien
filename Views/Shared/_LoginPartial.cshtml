@using Microsoft.AspNetCore.Identity
@using QuanPhucLongQuang_DoAnWeb.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var userName = UserManager.GetUserName(User);
}
@if (SignInManager.IsSignedIn(User) && !string.IsNullOrEmpty(userName))
{
    <div class="d-flex align-items-center gap-2 bg-light rounded-pill px-3 py-1 shadow-sm border border-1">
        <span class="d-flex align-items-center text-primary fw-semibold">
            <i class="bi bi-person-circle fs-5 me-1"></i> Hello @userName!
        </span>
        <form id="logoutForm" class="d-inline-block ms-2" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Books", "BookOrder", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3"><i class="bi bi-box-arrow-right"></i> Logout</button>
        </form>
    </div>
}
else
{
    <div class="d-flex align-items-center gap-2">
        <a class="btn btn-outline-primary btn-sm rounded-pill px-3" id="register" asp-area="Identity" asp-page="/Account/Register"><i class="bi bi-person-plus"></i> Register</a>
        <a class="btn btn-primary btn-sm rounded-pill px-3" id="login" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-box-arrow-in-right"></i> Login</a>
    </div>
}
