@model QuanPhucLongQuang_DoAnWeb.Models.Book
@{
    ViewData["Title"] = "Chi tiết sách";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-4 p-4">
                <div class="row g-4 align-items-stretch">
                    <!-- Ảnh bìa sách -->
                    <div class="col-md-4 d-flex align-items-center justify-content-center bg-light rounded-4">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="Ảnh bìa sách" class="img-fluid rounded shadow" style="max-height:340px;" />
                        }
                        else
                        {
                            <div class="text-center w-100">
                                <i class="bi bi-book display-1 text-secondary"></i>
                                <div class="mt-2 fs-5">Không có ảnh</div>
                            </div>
                        }
                    </div>
                    <!-- Thông tin sách -->
                    <div class="col-md-8">
                        <div class="card-body">
                            <h2 class="card-title mb-2" style="color:#c0392b;font-weight:bold;">@Model.Title</h2>
                            
                            <table class="table table-borderless mb-3">
                                <tbody>
                                    <tr>
                                        <th class="ps-0" style="width:140px;">Tác giả:</th>
                                        <td>@Model.Author</td>
                                    </tr>
                                    <tr>
                                        <th class="ps-0">Danh mục:</th>
                                        <td>@Model.Category?.Name</td>
                                    </tr>
                                    @if (!string.IsNullOrEmpty(Model.Condition)) {
                                    <tr>
                                        <th class="ps-0">Tình trạng:</th>
                                        <td>@Model.Condition</td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="mb-3">
                                <strong>Mô tả:</strong>
                                <div class="mt-2" style="text-align:justify;">@Model.Description</div>
                            </div>
                            <a href="/" class="btn btn-danger book-detail-btn mt-2">Quay lại</a>
                            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                                <input type="hidden" name="bookId" value="@Model.Id" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-warning book-detail-btn ms-2 mt-2">Đặt sách</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Các nhà sách lớn -->
    <div class="row mt-4 justify-content-center">
        <div class="col-lg-10">
            <h5 class="mb-3 text-center text-primary">BẠN CÓ THỂ MUA SÁCH TẠI CÁC NHÀ SÁCH TRONG CẢ NƯỚC HOẶC TẠI:</h5>
            <div class="d-flex flex-wrap justify-content-center gap-2">
                <a href="#" class="btn btn-outline-secondary">FAHASA<br><small>Fahasa.com</small></a>
                <a href="#" class="btn btn-outline-secondary">TIKI<br><small>Tiki.vn</small></a>
                <a href="#" class="btn btn-outline-secondary">SHOPEE NXBTrẻ<br><small>Shopee</small></a>
                <a href="#" class="btn btn-outline-secondary">LAZADA NXBTrẻ<br><small>Lazada</small></a>
                <a href="#" class="btn btn-outline-secondary">SHOPEE CN ĐÔNG NAM BỘ<br><small>Shopee</small></a>
                <a href="#" class="btn btn-outline-secondary">LAZADA CN ĐÀ NẴNG<br><small>Lazada</small></a>
                <a href="#" class="btn btn-outline-secondary">PHƯƠNG NAM<br><small>Nhà Sách</small></a>
                <a href="#" class="btn btn-outline-secondary">NHÀ VĂN<br><small>Nhanvan.vn</small></a>
                <a href="#" class="btn btn-outline-secondary">CÁ CHÉP</a>
                <a href="#" class="btn btn-outline-secondary">NEWSHOPVN<br><small>Mua Sách Online</small></a>
            </div>
        </div>
    </div>
</div> 