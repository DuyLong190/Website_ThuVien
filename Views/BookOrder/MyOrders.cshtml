@model IEnumerable<QuanPhucLongQuang_DoAnWeb.Models.BookOrder>
@{
    ViewData["Title"] = "Đơn đã đặt giữ";
}
<h2>Đơn đã đặt giữ</h2>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
<table class="table">
    <thead>
        <tr>
            <th>Ngày đặt</th>
            <th>Trạng thái</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
            <td>
                @if (!order.IsPickedUp)
                {
                    <span class="badge bg-warning text-dark">Chờ lấy</span>
                }
                else
                {
                    <span class="badge bg-success">Đã nhận</span>
                }
            </td>
            <td>
                <ul>
                @foreach (var detail in order.BookOrderDetails)
                {
                    <li>@detail.Book.Title (Số lượng: @detail.Quantity)</li>
                }
                </ul>
            </td>
        </tr>
    }
    </tbody>
</table> 