@model QuanPhucLongQuang_DoAnWeb.Models.Book
@{
    ViewData["Title"] = "Chi tiết sách";
}
<div class="row justify-content-center">
    <div class="col-lg-7 col-md-9 col-12">
        <div class="card shadow-sm border-0 mt-3 mb-4">
            <div class="card-header bg-primary text-white text-center py-3 rounded-top">
                <h3 class="mb-0"><i class="bi bi-book-half me-2"></i>@ViewData["Title"]</h3>
            </div>
            <div class="card-body p-4">
                <div class="row g-4 align-items-center">
                    <div class="col-md-5 text-center">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="Ảnh bìa sách" class="img-thumbnail shadow-sm mb-2" style="max-width:180px;max-height:260px;" />
                        }
                        else
                        {
                            <div class="text-muted fst-italic">Không có ảnh</div>
                        }
                    </div>
                    <div class="col-md-7">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Tiêu đề</dt>
                            <dd class="col-sm-8">@Model.Title</dd>
                            <dt class="col-sm-4">Tác giả</dt>
                            <dd class="col-sm-8">@Model.Author</dd>
                            <dt class="col-sm-4">Mô tả</dt>
                            <dd class="col-sm-8">@Model.Description</dd>
                            <dt class="col-sm-4">Số lượng</dt>
                            <dd class="col-sm-8">@Model.Quantity</dd>
                            <dt class="col-sm-4">Danh mục</dt>
                            <dd class="col-sm-8">@Model.Category?.Name</dd>
                            <dt class="col-sm-4">Tình trạng</dt>
                            <dd class="col-sm-8">@Model.Condition</dd>
                        </dl>
                    </div>
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4 py-2"><i class="bi bi-pencil-square me-1"></i> Sửa</a>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2"><i class="bi bi-arrow-left me-1"></i> Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div> 