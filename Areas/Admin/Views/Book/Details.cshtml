@model QuanPhucLongQuang_DoAnWeb.Models.Book
@{
    ViewData["Title"] = "Chi tiết sách";
}
<h2>@ViewData["Title"]</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">Tiêu đề</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Tác giả</dt>
        <dd class="col-sm-10">@Model.Author</dd>
        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Số lượng</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
        <dt class="col-sm-2">Danh mục</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>
        <dt class="col-sm-2">Ảnh bìa</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Ảnh bìa sách" style="max-width:200px;max-height:300px;" />
            }
            else
            {
                <span>Không có ảnh</span>
            }
        </dd>
        <dt class="col-sm-2">Tình trạng</dt>
        <dd class="col-sm-10">@Model.Condition</dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div> 