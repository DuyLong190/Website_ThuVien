@model QuanPhucLongQuang_DoAnWeb.Models.Book
@{
    ViewData["Title"] = "Thêm sách mới";
    var categories = ViewBag.Categories as IEnumerable<QuanPhucLongQuang_DoAnWeb.Models.Category>;
}
<div class="row justify-content-center">
    <div class="col-lg-7 col-md-9 col-12">
        <div class="card shadow-sm border-0 mt-3 mb-4">
            <div class="card-header bg-primary text-white text-center py-3 rounded-top">
                <h3 class="mb-0"><i class="bi bi-plus-circle me-2"></i>@ViewData["Title"]</h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" method="post" enctype="multipart/form-data" autocomplete="off">
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label fw-semibold">Tên sách</label>
                        <input asp-for="Title" class="form-control" placeholder="Nhập tên sách" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Author" class="form-label fw-semibold">Tác giả</label>
                        <input asp-for="Author" class="form-control" placeholder="Nhập tên tác giả" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-semibold">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả về sách"></textarea>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Quantity" class="form-label fw-semibold">Số lượng</label>
                            <input asp-for="Quantity" class="form-control" placeholder="Nhập số lượng" min="1" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="CategoryId" class="form-label fw-semibold">Danh mục</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(categories, "Id", "Name"))">
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3 mt-3">
                        <label asp-for="Condition" class="form-label fw-semibold">Tình trạng sách</label>
                        <input asp-for="Condition" class="form-control" placeholder="Nhập tình trạng sách" />
                        <span asp-validation-for="Condition" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label for="Image" class="form-label fw-semibold">Hình ảnh</label>
                        <input type="file" name="Image" class="form-control" accept="image/*" />
                    </div>
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-primary px-4 py-2"><i class="bi bi-save me-1"></i> Lưu</button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2"><i class="bi bi-arrow-left me-1"></i> Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 