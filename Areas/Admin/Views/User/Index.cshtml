@model IEnumerable<QuanPhucLongQuang_DoAnWeb.Models.ApplicationUser>
@{
    ViewData["Title"] = "Quản lý người dùng";
}
<h2>Quản lý người dùng</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên đăng nhập</th>
            <th>Họ tên</th>
            <th>Email</th>
            <th>Địa chỉ</th>
            <th>Tuổi</th>
            <!-- Có thể thêm các cột khác nếu cần -->
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Address</td>
                <td>@user.Age</td>
                <td>
                    <a class="btn btn-sm btn-primary me-1" asp-action="Edit" asp-route-id="@user.Id"><i class="bi bi-pencil-square"></i> Sửa</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@user.Id" onclick="return confirm('Bạn chắc chắn muốn xóa?')"><i class="bi bi-trash"></i> Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table> 