@model QuanPhucLongQuang_DoAnWeb.Models.ApplicationUser
@{
    ViewData["Title"] = "Xóa người dùng";
}
<h2>Xóa người dùng</h2>
<div class="alert alert-warning">Bạn có chắc chắn muốn xóa người dùng <strong>@Model.UserName</strong> không?</div>
<dl class="row">
    <dt class="col-sm-2">Họ tên</dt>
    <dd class="col-sm-10">@Model.FullName</dd>
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Địa chỉ</dt>
    <dd class="col-sm-10">@Model.Address</dd>
    <dt class="col-sm-2">Tuổi</dt>
    <dd class="col-sm-10">@Model.Age</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form> 