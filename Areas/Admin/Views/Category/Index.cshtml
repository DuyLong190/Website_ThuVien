@model IEnumerable<QuanPhucLongQuang_DoAnWeb.Models.Category>
@{
    ViewData["Title"] = "Danh sách danh mục";
}
<div class="row justify-content-center">
    <div class="col-lg-10 col-12">
        <div class="card shadow-sm border-0 mt-3 mb-4">
            <div class="card-header bg-primary text-white text-center py-3 rounded-top d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="bi bi-folder2-open me-2"></i>@ViewData["Title"]</h3>
                <a asp-action="Create" class="btn btn-success px-3 py-2"><i class="bi bi-plus-circle me-1"></i> Thêm mới</a>
            </div>
            <div class="card-body p-4">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width:30%">Tên danh mục</th>
                            <th style="width:15%" class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int stt = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1"><i class="bi bi-pencil-square"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                                    </td>
                                </tr>
                                stt++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">Không có danh mục nào.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 