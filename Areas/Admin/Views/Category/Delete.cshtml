@model QuanPhucLongQuang_DoAnWeb.Models.Category
@{
    ViewData["Title"] = "Xóa danh mục";
}
<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-12">
        <div class="card shadow-sm border-0 mt-3 mb-4">
            <div class="card-header bg-danger text-white text-center py-3 rounded-top">
                <h3 class="mb-0"><i class="bi bi-trash me-2"></i>@ViewData["Title"]</h3>
            </div>
            <div class="card-body p-4">
                <h5 class="text-danger mb-3">Bạn có chắc chắn muốn xóa danh mục này?</h5>
                <dl class="row mb-0">
                    <dt class="col-sm-4">Tên danh mục</dt>
                    <dd class="col-sm-8">@Model.Name</dd>
                </dl>
                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger px-4 py-2"><i class="bi bi-trash me-1"></i> Xóa</button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2"><i class="bi bi-arrow-left me-1"></i> Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 